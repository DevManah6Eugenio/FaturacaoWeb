<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>CadastroControlador</servlet-name>
        <servlet-class>br.com.faturacao.controlador.CadastroControlador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FormulacaoControlador</servlet-name>
        <servlet-class>br.com.faturacao.controlador.FormulacaoControlador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FornecedorControlador</servlet-name>
        <servlet-class>br.com.faturacao.controlador.FornecedorControlador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MateriaPrimaControlador</servlet-name>
        <servlet-class>br.com.faturacao.controlador.MateriaPrimaControlador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProdutoControlador</servlet-name>
        <servlet-class>br.com.faturacao.controlador.ProdutoControlador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConsultaControlador</servlet-name>
        <servlet-class>br.com.faturacao.controlador.ConsultaControlador</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CadastroControlador</servlet-name>
        <url-pattern>/CadastroControlador</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FormulacaoControlador</servlet-name>
        <url-pattern>/FormulacaoControlador</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FornecedorControlador</servlet-name>
        <url-pattern>/FornecedorControlador</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MateriaPrimaControlador</servlet-name>
        <url-pattern>/MateriaPrimaControlador</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProdutoControlador</servlet-name>
        <url-pattern>/ProdutoControlador</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConsultaControlador</servlet-name>
        <url-pattern>/ConsultaControlador</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
